{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "build": {
    "env": {
      "CI": "false"
    }
  },
  "routes": [
    {
      "src": "^/(?!.*\\..*$).*$",
      "dest": "/frontend/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "",
    "NODE_ENV": "",
    "PORT": "",
    "FRONTEND_URL": "",
    "JWT_SECRET": ""
  }
}