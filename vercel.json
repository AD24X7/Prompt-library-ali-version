{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "framework": "nextjs",
  "functions": {
    "backend/**": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "backend/server-new.js"
    }
  ],
  "env": {
    "DATABASE_URL": "",
    "NODE_ENV": "",
    "PORT": "",
    "FRONTEND_URL": "",
    "JWT_SECRET": ""
  }
}
